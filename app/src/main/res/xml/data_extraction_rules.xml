<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include essential app data for cloud backup -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="aalay_database.db"/>
        
        <!-- Exclude sensitive authentication data -->
        <exclude domain="sharedpref" path="auth_tokens.xml"/>
        <exclude domain="sharedpref" path="secure_prefs.xml"/>
        <exclude domain="file" path="cache/"/>
        <exclude domain="database" path="firebase_cache.db"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include user data for device transfer -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="aalay_database.db"/>
        <include domain="file" path="user_images/"/>
        
        <!-- Exclude session-specific data -->
        <exclude domain="sharedpref" path="auth_tokens.xml"/>
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="temp/"/>
    </device-transfer>
</data-extraction-rules>
