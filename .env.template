# Aalay Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Endpoints - Bhilai specific
API_BASE_URL_DEV=https://dev-api.aalay.com/v1/bhilai
API_BASE_URL_STAGING=https://staging-api.aalay.com/v1/bhilai  
API_BASE_URL_PROD=https://api.aalay.com/v1/bhilai

# Mapbox API Keys (for optional maps integration)
MAPBOX_ACCESS_TOKEN_DEV=your_development_mapbox_token
MAPBOX_ACCESS_TOKEN_STAGING=your_staging_mapbox_token
MAPBOX_ACCESS_TOKEN_PROD=your_production_mapbox_token

# Firebase Configuration
FIREBASE_PROJECT_ID_DEV=aalay-dev
FIREBASE_PROJECT_ID_STAGING=aalay-staging
FIREBASE_PROJECT_ID_PROD=aalay-prod
FIREBASE_APP_ID=your_firebase_app_id

# Keystore Configuration (for release builds)
KEYSTORE_FILE=release.keystore
KEYSTORE_PASSWORD=your_keystore_password
KEY_ALIAS=your_key_alias
KEY_PASSWORD=your_key_password

# Optional: Analytics and Crash Reporting
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true

# Bhilai Specific Configuration
BHILAI_CENTER_LAT=21.2181
BHILAI_CENTER_LNG=81.3248
BHILAI_SEARCH_RADIUS_KM=10

# Google Maps Integration (URL-based, no API key required)
GOOGLE_MAPS_URL_BASE=https://www.google.com/maps/search/?api=1&query=
